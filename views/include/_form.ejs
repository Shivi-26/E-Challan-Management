<!--form handling-->
<form action="/api/users" method="POST" id="add_user" onsubmit="return validateForm()">
  <div class="new_user">
    <div class="form-group">
      <label for="name" class="text-light">Name</label>
      <input type="hidden" name="id" value="">
      <input type="text" name="name" value="" placeholder="Enter Name">
    </div>
    <div class="form-group">
      <label for="email" class="text-light">E-mail</label>
      <input type="text" name="email" id="email" value="" required>
      <span id="emailError" class="error"></span>
    </div>
    <div class="form-group">
      <label for="contact" class="text-light">Contact:</label>
      <input type="text" name="contact" id="contact" value="" required>
      <span id="contactError" class="error"></span>
    </div>
    <div class="form-group">
      <label for="dov" class="text-light">License no.</label>
      <input type="text" name="licenseno" value="" required>
    </div>
    <div class="form-group">
      <label for="vehicleno" class="text-light">Vehicle Number</label>
      <input type="text" name="vehicleno" value="" required>
    </div>
    <div class="form-group">
      <button type="submit" class="btn text-white update">Save</button>
    </div>
  </div>
</form>
<!--/form handling-->

<script>
function validateForm() {
  var emailInput = document.getElementById("email");
  var emailError = document.getElementById("emailError");
  var contactInput = document.getElementById("contact");
  var contactError = document.getElementById("contactError");

  // Regular expression for email validation (Gmail)
  var emailPattern = /^[^\s@]+@gmail\.com$/;

  // Check if the email is in a valid format
  if (!emailPattern.test(emailInput.value)) {
    alert("Please enter a valid Email address");
    emailInput.focus();
    return false;
  } else {
    emailError.innerText = "";
  }

  // Check if the contact number is at least 10 digits long
  if (contactInput.value.length !== 10 || isNaN(contactInput.value)) {
    alert("Contact number should have exactly 10 digits");
    contactInput.focus();
    return false;
  } else {
    contactError.innerText = "";
  }

  return true;
}
</script>








