<%-include('include/_header') %>
<!--/include header-->
  <style>
    * {
      margin: 0;
      padding: 0;
      font-family: Verdana, Geneva, Tahoma, sans-serif;
    }

    body {
      
    }

    .lock {
      text-align: center;
      position: relative;
      top: 100px;
    }

    .custom-container {
      width: 90%;
      max-width: 500px;
      height: 250px;
      margin: auto;
      margin-top: 6em;
      transform: translate(30%, 30%);
      background: #040427;
      box-shadow: 10px 10px 12px 8px lightseagreen;
      border-radius: 5px;
      position: relative;
      overflow: hidden;
    }

    h3 {
      text-align: center;
      margin-top: 20px;
      margin-bottom: 40px;
      color: white;
    }

    .custom-container form {
      width: 80%;
      margin: 0 auto;
      transition: 0.5s;
    }

    form input {
      width: 100%;
      padding: 10px 5px;
      margin: 5px 0;
      border: 0;
      border-bottom: 1px solid white;
      color: white;
      outline: none;
      background: transparent;
    }

    ::placeholder {
      color: white;
      margin: 30px auto;
      text-align: center;
    }

    form button {
      width: 110px;
      height: 35px;
      margin: 0 10px;
      background: linear-gradient(to right, white);
      border-radius: 30px;
      border: 0;
      outline: none;
      cursor: pointer;
    }

    .step-row {
      width: 90%;
      height: 40px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      box-shadow: 0 -1px 5px -1px white;
      position: relative;
    }

    .step-col {
      width: 250;
      text-align: center;
      color: white;
      position: relative;
    }
    .btn-box{
        display: flex;
    }

    :required + .message::before {
      content: "* ";
    }

    .text-field:focus:required:valid {
      outline: red 2px;
    }

    @media screen and (max-width: 768px) {
      .custom-container {
        transform: translate(0, 0);
        max-width: 100%;
      }
    }
  </style>

  <div class="custom-container">
    <form method="POST" id="admin-log" action="/admin_home">
      <h3>ADMIN PERSONNEL</h3>
      <input type="text" placeholder="POLICE ID" value="" class="field text-field policeid-field" name="policeid" required>
      <span class="message"></span>
      <input type="password" placeholder="PASSWORD" name="password" value="" class="field text-field policeid-field" required>
      <div class="btn-box">
        <button type="submit" value="login">Login</button>
        <button type="button" id="rback">Back</button>
      </div>
    </form>
  </div>
  
  <!--/include footer-->
  <%-include('include/_footer')%>
  <!--/include footer-->
